<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"

    android:layout_height="100dp"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:padding="15dp"

    cardview:cardCornerRadius="15dp"

    android:backgroundTint="@color/colorPrimaryLight"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/checkOutCardViewImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sandwichtest"
            android:layout_margin="5dp"
            android:layout_weight="2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/checkOutCardViewProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Bocata de Bacon"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp"

                android:gravity="right"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/checkOutCardViewProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="0,99 â‚¬"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="17sp"

                android:gravity="right"

                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|top"
                >

                <ImageButton
                    android:id="@+id/checkOutRemoveItemButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/removecirclefull"/>

                <TextView
                    android:id="@+id/checkOutProductQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="5"
                    android:textSize="27sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/roboto_light"
                    android:gravity=""
                    android:layout_gravity="top"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:maxLines="1"
                    android:maxLength="2"
                    />

                <ImageButton
                    android:id="@+id/checkOutAddItemButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/addcirclefull"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>